html
  scroll-behavior smooth

body
  font-size 15px

img
  display inline-block
  padding 0 4px
  vertical-align bottom

s
  color $arrowBgColor

h1
  font-size 2.0rem

h2
  font-size 1.5rem

.index {$contentClass}
  max-width calc(100vw - 20rem - 80px)

.page-header
  position relative
  margin-top 24px
  margin-left -40px
  margin-right -40px
  padding 40px
  color white
  background-color black
  background-size cover
  background-repeat no-repeat
  background-position center

  &:before
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0, 0, 0, .5)

  &-content
    position relative

  h1, p
    margin-top 0.25em
    margin-bottom 0.25em
  p
    font-weight bold